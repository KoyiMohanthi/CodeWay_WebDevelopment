<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Currency Converter</title>
    <style>
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
      }
      form {
        height: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
      }
      .upper {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-evenly;
        width: 1100px;
      }
      .lower {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 1100px;
      }
      h4 {
        background-color: lightblue;
        border: 2px solid black;
        width: 350px;
        height: 50px;
        border: 2px solid black;
        border-radius: 10px;
        margin-left: 10px;
      }
      input {
        width: 300px;
        height: 34px;
        border-radius: 10px;
        border: 2px solid black;
      }
      select {
        width: 300px;
        height: 40px;
        border-radius: 10px;
        border: 2px solid black;
      }
      .empty {
        width: 100px;
        margin-left: 40px;
      }
      button {
        height: 50px;
        width: 100px;
        border-radius: 10px;
        border: 2px solid black;
        background-color: black;
        color: white;
        font-weight: bolder;
        margin-right: 50px;
      }
      h1 {
        color: black;
        margin-bottom: -3px;
      }
      .cc {
        width: 135px;
        height: 5px;

        background: lightblue;
      }
      .ccc {
        width: 135px;
        height: 5px;

        background: blue;
      }
      .cccc {
        display: flex;
        flex-direction: row;
      }
      .box {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        border: 2px solid black;
        width: 1100px;
      }
    </style>
  </head>
  <body>
    <div>
      <h1>Currency Converter</h1>
      <div class="cccc">
        <p class="cc"></p>
        <p class="ccc"></p>
      </div>
    </div>
    <div class="box">
      <form action="/index" method="post">
        <div class="upper">
          <div>
            <h3>Amount</h3>
            <input type="text" name="value1" placeholder="enter your value" />
          </div>
          <div>
            <h3>From</h3>
            <select name="d1" id="">
              <% for (const currency in rates) { %>
              <option value="<%= currency %>" name="<%=currency %>">
                <%= currency %>
              </option>
              <% } %>
            </select>
          </div>
          <div>
            <h3 class="empty"></h3>
            <p>=</p>
          </div>

          <div>
            <h3>To</h3>
            <select name="d2" id="">
              <% for (const i in rates) { %>
              <option value="<%= i %>" name="<%=i %>"><%= i %></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="lower">
          <h4><%= typeof r !== 'undefined' ? r : '' %></h4>
          <button>Converter&nbsp;&nbsp;&gt;&gt;</button>
        </div>
      </form>
    </div>
  </body>
</html>
